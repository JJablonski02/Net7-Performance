@using WeatherApp.Models
@model IEnumerable<CityWeather>

<!DOCTYPE html>
<html>
    <head>
        <title>Weather</title>
        <meta charset="utf-8" />
        <link href="~/StyleSheet.css" rel="stylesheet" />
    </head>
    <body>
        <div class="page-content">
            <h1>Weather</h1>

            <div>
            @foreach (CityWeather cityWeather in Model)
            {
                <div class="box float-left w-50">
                    <h3>@cityWeather.CityName</h3>
                    <table class="table w-100">
                        <tbody>
                            <tr>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                    </div>
            }
        </div>
        </div>
    </body>
</html>
